{{#partial "contenido"}}

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h2>Caracteristicas</h2>
          <ul>
           <li>
               {#caracteristicas}
               {Valor}
               {/caracteristicas}
           </li>
          </ul>


        </div>
        <div class="col-sm-4">
            <h2>Agregar caracteristica</h2>
            <p>Por favor, complete los datos que se mencionan a continuación:</p>
            <form action="/caracteristicas/crear" method="POST">

                <input type="text" id="nombre" name="nombre" placeholder="Nombre de nueva caracteristica"><br><br>

                <input type="submit" value="Confirmar">
            </form>  </div>
        <div class="col-sm-4">
            <h2>Eliminar caracteristica</h2>
            <p>Por favor, complete los datos que se mencionan a continuación:</p>
            <form action="/caracteristicas/borrar" method="GET">

                <input type="text" id="nombre" name="nombre" placeholder="Nombre de la caracteristica"><br><br>

                <input type="submit" value="Confirmar">
            </form>
        </div>
    </div>
</div>

{{/partial}}

{{>layout.html.hbs}}
