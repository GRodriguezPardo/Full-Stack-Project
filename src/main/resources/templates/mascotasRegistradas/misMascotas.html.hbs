{{#partial "contenido"}}

<h2>Mis Mascotas</h2>
<div class="row">
    <div class="col-sm-8">
        <table class="table table-stripped">
        	<tr>
        		<th>Nombre</th>
        		<th>Apodo</th>
        		<th>Especie</th>
        		<th>Edad</th>
        		<th>Sexo</th>
        		<th></th>
        	</tr>

        	{{#each mascotas}}
        		<tr>
        			<td>{{nombre}}</td>
        			<td>{{apodo}}</td>
        			<td>{{especie}}</td>
        			<td>{{edad}}</td>
        			<td>{{sexo}}</td>
        			<td><a href="/mascotas/{{id}}">Ver mascota</a><td>
        		</tr>
        	{{/each}}
        </table>
    </div>
</div>

{{/partial}}

{{>layout.html.hbs}}
